<!DOCTYPE html>
<html lang="<%= locale.locale %>">

<head>
	<%- include("elements/head"); %>
  <meta id="current-page" content="search">
  <title><%= locale.title.search %></title>
  <script defer src="/js/search.js"></script>
  <link rel="stylesheet" href="/css/create.css">
  <link rel="stylesheet" href="/css/recipe.css">
  <link rel="stylesheet" href="/css/search.css">
</head>

<body>
  <%- include("elements/navbar"); %>
	
	<main>
    <h1>BÃºsqueda</h1>

    <form action="" method="get" id="search-form">
      <fieldset id="basicSearch">
        <div>
          <input type="search" name="search" id="search" placeholder="Nombre de la receta">
          <button type="submit"><i class='bx bx-search-alt'></i></button>
        </div>
      </fieldset>
      
      <fieldset id="advanceSearch" hidden>
        <div class="tags-input-container form-input"></div>
      </fieldset>
    </form>
    
    <div id="search-results">
      <template id="result-template">
          <a>
            <article class="recipe-result">
              <img class="recipe-image">
              <div class="recipe-data">
                <h3 class="recipe-name"></h3>
                <div class="tags-container"></div>
                <i class='bx bx-chevron-right'></i>
              </div>
            </article>
          </a>
      </template>
    </div>

	</main>

	<%- include("elements/footer"); %>
</body>
</html>
