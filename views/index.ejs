<!DOCTYPE html>
<html lang="es">

<head>
	<%- include("templates/head-template"); %>
  <link rel="stylesheet" href="/stylesheets/grid.css">
  <meta id="current-page" content="index">
</head>

<body>

  <%- include("templates/navbar-template"); %>

  <main>
    <section class="basic-grid">
      <% for (const recipe of recipes) { %>
      <a href="/recipe/<%= recipe.id %>" alt="<%= recipe.name %>" class="card-link">
        <div class="card" id="<%= recipe.id %>">
          <div class="card-image" style="background-image: url(/recipes/images/<%= recipe.image %>);" alt=""></div>
          <div class="card-name">
            <h3><%= recipe.name %></h3>
          </div>
          <div class="card-description">
            <p><%= recipe.description %></p>
          </div>
        </div>
      </a>
      <% } %>
    </section>
  </main>

  <%- include("templates/footer-template"); %>

</body>

</html>
